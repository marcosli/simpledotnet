<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sample.Project.Domain">
  <class name="Sample.Project.Domain.Book, Sample.Project.Contracts" table="books" schema="dbo" >
        <id name="Id" column="id">
      <generator class="native" />
    </id>
         
    <property name="Title">
      <column name="title" sql-type="nvarchar" />
    </property>
    <property name="Author">
      <column name="author" sql-type="nvarchar" />
    </property>


  </class>
</hibernate-mapping>